BASE_URL=http://localhost:3000

# Supabase
NUXT_PUBLIC_SUPABASE_URL=your_supabase_url
NUXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_service_role_key

# JWT Secret pour signer les tokens de session scanner 
# IMPORTANT: Générez votre propre clé unique avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_unique_jwt_secret_here

# Stripe (https://stripe.com)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Nodemailer SMTP (pour l'envoi d'emails)
NODEMAILER_HOST=your_smtp_host
NODEMAILER_PORT=587
NODEMAILER_USER=your_email
NODEMAILER_PASS=your_app_password
NODEMAILER_FROM=your_from_email

# Désactiver HTTPS en développement
NUXT_DEV_HTTPS=false